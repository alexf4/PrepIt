mixin main
    a(href='/teacher')
        i.fa.fa-th-large
        span.nav-label Main View

mixin Student_Analysis
    a(href='/studentList')
        i.fa.fa-th-large
        span.nav-label Student Analysis

mixin Question_Analysis
    a(href='/questionAnalysis')
        i.fa.fa-th-large
        span.nav-label Question Analysis

mixin settings
    a(href='/settings')
        i.fa.fa-th-large
        span.nav-label Settings

nav.navbar-default.navbar-static-side(role='navigation')
    .sidebar-collapse
        ul#side-menu.nav
            li.nav-header
                .dropdown.profile-element
                    a.dropdown-toggle(data-toggle='dropdown', href='#')
                        span.clear
                            span.block.m-t-xs
                                strong.font-bold #{userEmail}
                    ul.dropdown-menu.animated.fadeInRight.m-t-xs
                        li
                            a(href='/signout') Logout
                .logo-element
                    | IN+

            if activeSection == "Main_View"
                li.active
                    mixin main
            else
                li
                    mixin main

            if activeSection == "Student_Analysis"
                li.active
                    mixin Student_Analysis
            else
                li
                    mixin Student_Analysis

            if activeSection == "Question_Analysis"
                li.active
                    mixin Question_Analysis
            else
                li
                    mixin Question_Analysis

            if activeSection == "Settings"
                li.active
                    mixin settings
            else
                li
                    mixin settings

            .nav-divider
            li
                a
                    i.fa.fa-info
                    span.nav-label Class Code: #{ClassCode}