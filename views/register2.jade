doctype html
html
head
   meta(charset='utf-8')

   meta(name='viewport', content='width=device-width, initial-scale=1.0')

   title PrepIT | Register

   link(href='css/bootstrap.min.css', rel='stylesheet')

   link(href='font-awesome/css/font-awesome.css', rel='stylesheet')

   link(href='css/plugins/iCheck/custom.css', rel='stylesheet')

   link(href='css/animate.css', rel='stylesheet')

   link(href='css/style.css', rel='stylesheet')
body.gray-bg
   .middle-box.text-center.loginscreen.animated.fadeInDown
      div
         div
            h1.logo-name PrepIT

         h3 Register to PrepIT

         p Create account to see it in action.
         form.m-t(role='form', action='/signup', method='POST')
            .form-group
               input.form-control(type='email', name='email', placeholder='Email', required)

            .form-group
               input.form-control(type='password', name='password' placeholder='Password', required=)

            .form-group
               .checkbox.i-checks
                  label
                     input(type='checkbox', name='isTeacher', value='true')
                     Agree I am a physical therapist

            button.btn.btn-primary.block.full-width.m-b(type='submit') Register

            p.text-muted.text-center
               small Already have an account?

            a.btn.btn-sm.btn-white.btn-block(href='login') Login

   // Mainly scripts
   script(src='js/jquery-2.1.1.js')

   script(src='js/bootstrap.min.js')
   // iCheck
   script(src='js/plugins/iCheck/icheck.min.js')

   script.
      $(document).ready(function(){
         $('.i-checks').iCheck({
            checkboxClass: 'icheckbox_square-green',
            radioClass: 'iradio_square-green',
         });
      });
