doctype html
html
   //Head
   include ./includes/head.jade
   body.gray-bg
      .middle-box.text-center.loginscreen.animated.fadeInDown
         div
            div
               h1.logo-name PrepIT

            h3 Welcome to PrepIT

            p Login in. To see it in action.
            .alert-danger #{error}
            .alert-success #{success}

            form.m-t(role='form', action='/login', method='POST')
               .form-group
                  input.form-control(type='email', name='email', placeholder='Email', required='')

               .form-group
                  input.form-control(type='password', name='password', placeholder='Password', required='')

               button.btn.btn-primary.block.full-width.m-b(type='submit') Login

               a(href='mailto:info@prepit.io?subject=Please Reset My Password')
                  small Forgot password?

               p.text-muted.text-center
                  small Do not have an account?

               a.btn.btn-sm.btn-white.btn-block(href='register') Create an account

   // Mainly scripts
   script(src='js/jquery-2.1.1.js')

   script(src='js/bootstrap.min.js')

   script(src="js/plugins/toastr/toastr.min.js")

   script(src='js/plugins/slimscroll/jquery.slimscroll.min.js')

   // Custom and plugin javascript
   script(src='js/inspinia.js')
   script(src='js/plugins/pace/pace.min.js')
   script(src='https://cdnjs.cloudflare.com/ajax/libs/Chart.js/1.0.2/Chart.js')
   script(type='text/javascript').