doctype html
html
head
   meta(charset='utf-8')

   meta(name='viewport', content='width=device-width, initial-scale=1.0')

   title PrepIT | Login

   link(href='css/bootstrap.min.css', rel='stylesheet')

   link(href='font-awesome/css/font-awesome.css', rel='stylesheet')

   link(href='css/animate.css', rel='stylesheet')

   link(href='css/style.css', rel='stylesheet')
body.gray-bg
   .middle-box.text-center.loginscreen.animated.fadeInDown
      div
         div
            h1.logo-name PrepIT

         h3 Welcome to PrepIT

         p
             Perfectly designed and precisely prepared admin theme with over 50 pages with extra new web app views.
            // Continually expanded and constantly improved Inspinia Admin Them (IN+)

         p Login in. To see it in action.
         .alert-danger #{message}

         form.m-t(role='form', action='/login', method='POST')
            .form-group
               input.form-control(type='email', name='email', placeholder='Email', required='')

            .form-group
               input.form-control(type='password', name='password', placeholder='Password', required='')

            button.btn.btn-primary.block.full-width.m-b(type='submit') Login

            a(href='#')
               small Forgot password?

            p.text-muted.text-center
               small Do not have an account?

            a.btn.btn-sm.btn-white.btn-block(href='register') Create an account

   // Mainly scripts
   script(src='js/jquery-2.1.1.js')

   script(src='js/bootstrap.min.js')

   script(src="js/plugins/toastr/toastr.min.js")
